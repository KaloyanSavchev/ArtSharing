@model ArtSharing.Data.Models.Models.Comment
@using ArtSharing.Web.Helpers

@{
    ViewData["Title"] = "Delete Comment";
}

<h3>Are you sure you want to delete this comment?</h3>

<div class="border p-3 rounded bg-light mt-2">
    <strong>@Model.User.UserName</strong>
    <p>@ContentFilter.CensorText(Model.Content)</p>
    <small class="text-muted">Posted on @Model.CreatedAt.ToShortDateString()</small>
</div>

<form asp-action="Delete" asp-controller="Comment" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary mt-3">Cancel</a>
</form>
