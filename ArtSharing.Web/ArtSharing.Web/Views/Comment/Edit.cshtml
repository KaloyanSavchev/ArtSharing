@model ArtSharing.Data.Models.Models.Comment

@{
    ViewData["Title"] = "Edit Comment";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">✏️ Edit Comment</h4>
        </div>
        <div class="card-body bg-light text-dark dark-mode bg-dark text-light">
            <form asp-action="Edit" asp-controller="Comment" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PostId" />

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Comment</label>
                    <textarea asp-for="Content" class="form-control" rows="4" placeholder="Edit your comment..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success me-2">💾 Save</button>
                <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
