@model ArtSharing.Web.Models.ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">👤 Your Profile</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">

                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <div class="text-center mb-3">
                        <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                }
                else
                {
                    <div class="text-center mb-3">
                        <img src="https://via.placeholder.com/150" alt="No Profile Picture" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px;" />
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Model.ProfileDescription</dd>

                    <dt class="col-sm-4">Registered on:</dt>
                    <dd class="col-sm-8">@Model.DateRegistered.ToString("MMMM dd, yyyy")</dd>
                </dl>

                <div class="text-end mt-3">
                    <a asp-controller="Profile" asp-action="Edit" class="btn btn-outline-primary">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
