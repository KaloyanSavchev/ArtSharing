@model List<ArtSharing.Data.Models.Models.Comment>

@foreach (var comment in Model)
{
    <div class="mb-3" style="margin-left:@(comment.ParentCommentId != null ? "40px" : "0")">
        <div class="border p-3 rounded bg-light">
            <strong>@comment.User.UserName</strong>
            <p>@comment.Content</p>
            <small class="text-muted">@comment.CreatedAt.ToShortDateString()</small>

            <div class="mt-2">
            
                @if (User.Identity.IsAuthenticated &&
               (User.Identity.Name == comment.User.UserName || User.IsInRole("Admin")))
                {
                    <a asp-controller="Comment" asp-action="Edit" asp-route-id="@comment.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                    <form asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this comment and its replies?');">Delete</button>
                    </form>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Comment" asp-action="Create" method="post" class="mt-2">
                        <input type="hidden" name="PostId" value="@comment.PostId" />
                        <input type="hidden" name="ParentCommentId" value="@comment.Id" />
                        <div class="form-group">
                            <textarea name="Content" class="form-control" placeholder="Reply to this comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-sm btn-outline-primary mt-1">Reply</button>
                    </form>
                }
            </div>
        </div>

        @if (comment.Replies != null && comment.Replies.Count > 0)
        {
            @await Html.PartialAsync("_CommentsPartial", comment.Replies)
        }
    </div>
}
