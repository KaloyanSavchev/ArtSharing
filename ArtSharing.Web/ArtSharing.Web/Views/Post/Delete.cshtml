@model ArtSharing.Data.Models.Models.Post
@{
    ViewData["Title"] = "Delete Post";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        @if (Model.PostImages != null && Model.PostImages.Any())
        {
            <img src="@Model.PostImages.First().ImagePath" class="card-img-top" alt="@Model.Title" style="max-height: 300px; object-fit: cover;" />
        }
        else
        {
            <div class="text-muted text-center py-4">No image available</div>
        }

        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text">@Model.Description</p>
            <p class="text-muted mb-1">Posted by <strong>@Model.User.UserName</strong> on @Model.CreatedAt.ToShortDateString()</p>
            <p class="text-muted">Category: @Model.Category?.Name</p>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">🗑️ Delete</button>
        </form>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</div>
