@model ArtSharing.Data.Models.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<h2>Are you sure you want to delete this post?</h2>

<div class="card mb-3 shadow-sm">
    <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="max-height: 300px; object-fit:cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <p class="text-muted">Posted by @Model.User.UserName on @Model.CreatedAt.ToShortDateString()</p>
        <p class="text-muted">Category: @Model.Category.Name</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
