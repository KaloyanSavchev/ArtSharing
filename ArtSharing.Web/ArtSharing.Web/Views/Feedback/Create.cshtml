@model ArtSharing.ViewModels.FeedbackInputModel

@{
    ViewData["Title"] = "Send Feedback";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">💬 Send Feedback</h4>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Subject" class="form-label"></label>
                    <input asp-for="Subject" class="form-control" placeholder="Feedback subject..." />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Message" class="form-label"></label>
                    <textarea asp-for="Message" rows="5" class="form-control" placeholder="Share your thoughts..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="">Select a type...</option>
                        <option>Suggestion</option>
                        <option>Issue</option>
                        <option>Praise</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">📤 Send Feedback</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
