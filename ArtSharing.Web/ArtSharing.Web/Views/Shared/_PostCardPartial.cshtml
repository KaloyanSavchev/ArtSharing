@using ArtSharing.Web.Helpers
@model ArtSharing.Data.Models.Models.Post

<div class="col">
    <div class="card h-100 shadow-sm" data-category-id="@Model.CategoryId">
        @{
            var firstImage = Model.PostImages?.FirstOrDefault()?.ImagePath ?? "/images/no-image-available.png";
        }

        <div class="image-card-wrapper">
            <div class="image-blur-bg" style="background-image: url('@firstImage');"></div>
            <img src="@firstImage" alt="@ContentFilter.CensorText(Model.Title)" class="main-image" />
        </div>

        <div class="card-body">
            <h5 class="card-title">@ContentFilter.CensorText(Model.Title)</h5>
            <p class="card-text">@ContentFilter.CensorText(Model.Description)</p>
            <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary mt-2">View Details</a>
        </div>
        <div class="card-footer text-muted">
            by <strong>@Model.User?.UserName</strong> | @Model.Category?.Name
        </div>
    </div>
</div>
