@{
    ViewData["Title"] = "Post Already Reported";
}

<div class="text-center mt-5">
    <h2 class="text-warning">📄 You have already reported this post</h2>
    <p class="mt-3">You cannot report the same post more than once. Our team will review it as soon as possible.</p>

    <a asp-controller="Post" asp-action="Details" asp-route-id="@ViewBag.PostId" class="btn btn-primary mt-4">
        Back to Post
    </a>
</div>
