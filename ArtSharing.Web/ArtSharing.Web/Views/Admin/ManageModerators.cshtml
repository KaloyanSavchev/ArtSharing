@model IEnumerable<ArtSharing.Web.Models.UserWithRolesViewModel>
@{
    ViewData["Title"] = "Manage Moderators";
}

<h2>Manage Moderators</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        if (!user.Roles.Contains("Admin") && !user.Roles.Contains("Moderator"))
                        {
                            <form asp-action="PromoteToModerator" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Promote to Moderator</button>
                            </form>
                        }
                        else if (user.Roles.Contains("Moderator") && !user.Roles.Contains("Admin"))
                        {
                            <form asp-action="RemoveModerator" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove Moderator</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Already @string.Join(", ", user.Roles)</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">@string.Join(", ", user.Roles)</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
