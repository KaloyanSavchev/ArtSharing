@model IEnumerable<ArtSharing.Web.Models.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Manage Moderators";
}

<h2>Manage Moderators</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Status</th>
            <th>Promote / Demote</th>
            <th>Ban / Unban</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>

                <td>
                    @if (user.IsBanned)
                    {
                        <span class="badge bg-danger">BANNED</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>

                <td>
                    @if (user.Roles.Contains("Admin"))
                    {
                        <span class="text-muted">Admin</span>
                    }
                    else if (user.Roles.Contains("Moderator"))
                    {
                        <form asp-action="RemoveModeratorRole" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">Remove Moderator</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="PromoteToModerator" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Promote to Moderator</button>
                        </form>
                    }
                </td>

                <td>
                    @if (!user.Roles.Contains("Admin"))
                    {
                        @if (user.IsBanned)
                        {
                            <form asp-action="UnbanUser" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Unban</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="BanUserFromList" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Ban</button>
                            </form>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Not allowed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
