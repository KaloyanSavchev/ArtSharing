@model List<ArtSharing.Data.Models.Models.Post>

@{
    ViewData["Title"] = "Home";
}

<h1 class="text-center my-4">🖼️ Art Feed</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="image-card-wrapper">
                        <div class="image-blur-bg" style="background-image: url('@post.ImagePath');"></div>
                        <img src="@post.ImagePath" alt="@post.Title" class="main-image" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Description</p>

                        <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-outline-primary mt-2">
                            View Details
                        </a>
                    </div>
                    <div class="card-footer text-muted">
                        by <strong>@post.User.UserName</strong> | @post.Category.Name
                    </div>
                </div>
            </div>
        }
    </div>
</div>
