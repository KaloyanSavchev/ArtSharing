@model List<ArtSharing.Data.Models.Models.Post>

@{
    ViewData["Title"] = "Home";
}

<h1 class="text-center my-4">🖼️ Art Feed</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@post.ImagePath" class="card-img-top" alt="@post.Title" style="object-fit:cover; height:200px;">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Description</p>
                    </div>
                    <div class="card-footer text-muted">
                        by <strong>@post.User.UserName</strong> | @post.Category.Name
                    </div>
                </div>
            </div>
        }
    </div>
</div>
