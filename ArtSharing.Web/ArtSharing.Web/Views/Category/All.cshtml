@model IEnumerable<ArtSharing.Data.Models.Models.Category>
@{
    ViewData["Title"] = "Available Categories";
}

<h2>Available Categories</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>
