@model IEnumerable<ArtSharing.Data.Models.Models.Category>

@{
    ViewData["Title"] = "Available Categories";
}

<h2 class="text-center my-4">🎨 Available Categories</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border rounded-3">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@category.Name</h5>
                        <p class="card-text text-muted">
                            @(!string.IsNullOrWhiteSpace(category.Description) ? category.Description : "No description available.")
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
